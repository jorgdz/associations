    <div id="loader"><div class="spinner"></div></div>
    <script>
      window.addEventListener("load", function load() {
        const loader = document.getElementById("loader");
        setTimeout(function () {
          loader.classList.add("fadeOut");
        }, 300);
      });
    </script>

    <div>
      
      {{> sidebar}}

      <div class="page-container">
        {{> navbar}}

        <main class="main-content bgc-grey-100">
          <div id="mainContent">
            <div class="container-fluid">
              <h4 class="c-grey-900 mT-10 mB-30">Añadir producto</h4>           
              <div class="row">
                <div class="col-md-12">
                  <div class="bgc-white bd bdrs-3 p-20 mB-20">
                    <div style="text-align: center;">
                      {{#if success}}
                        <div class="alert alert-success" role="alert">
                          {{success}}
                        </div>
                      {{/if}}
                    </div>
                    <a href="/product-create" class="btn cur-p btn-primary">Nuevo</a>
                    <p>
                      <div class="row">	
                        <div class="col col-sm-5">
                          <input type="text" id="searchProduct" placeholder="Buscar..." class="form-control" />
                        </div>		
                        <div class="col col-sm-6"></div>
                        <div class="col col-sm-1">
                          <select id="sizeListProducts" class="form-control">
                            <option value="7">7</option>
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                          </select>    
                        </div>
                      </div>
                    </p>
                    <table class="table table-hover table-bordered">
                      <thead class="thead-dark">
                        <tr>
                          <th scope="col">#</th>
                          <th scope="col">Imagen</th>
                          <th scope="col">Nombre del producto</th>
                          <th scope="col">Precio</th>
                          <th scope="col">Oferta</th>
                          <th scope="col">Imágenes</th>
                          <th scope="col">Editar</th>
                          <th scope="col">Borrar</th>
                        </tr>
                      </thead>
                      <tbody id="listProducts">
                       
                      </tbody>
                    </table>
                    <div style="width:100%;text-align: center;">
                      <div
                        class="btn-group mr-2"
                        role="group"
                        aria-label="First group"
                        id="paginationProducts"
                      >
                        
                      </div>
                    </div>
                  </div>
                </div>
              </div>            
            </div>
          </div>
        </main>
        
        {{> footerAdm}}
      </div>
    </div>
