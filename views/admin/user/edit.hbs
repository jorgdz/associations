    <div id="loader"><div class="spinner"></div></div>
    <script>
      window.addEventListener("load", function load() {
        const loader = document.getElementById("loader");
        setTimeout(function () {
          loader.classList.add("fadeOut");
        }, 300);
      });
    </script>

    <div>
      
      {{> sidebar}}

      <div class="page-container">
        {{> navbar}}

        <main class="main-content bgc-grey-100">
          <div id="mainContent">
            <div class="row gap-20 masonry pos-r">
              <div class="masonry-sizer col-md-6"></div>
              <div class="masonry-item col-md-12">
                <div class="bgc-white p-20 bd">
                  <h6 class="c-grey-900">Editar usuario</h6>
                  <div class="mT-30">
                     <form method="POST" action="/users/update/{{userfind.id}}" class="container" id="needs-validation" novalidate>
                      <div class="row">
                        <div class="col-md-4 mb-3">
                          <label for="validationCustom01">Nombres</label>
                          <input
                            type="text"
                            class="form-control"
                            id="validationCustom01"
                            placeholder="Nombres completos"                          
                            name="name"
                            value="{{userfind.name}}"
                            required
                          />
                          <div class="invalid-feedback">
                            Por favor ingresa tus nombres.
                          </div>
                        </div>
                        <div class="col-md-4 mb-3">
                          <label for="validationCustom02">Apellidos</label>
                          <input
                            type="text"
                            class="form-control"
                            id="validationCustom02"
                            placeholder="Apellidos completos"
                            name="lastname"
                            value="{{userfind.lastname}}"
                            required
                          />
                          <div class="invalid-feedback">
                            Por favor ingresa tus apellidos.
                          </div>
                        </div>
                        <div class="col-md-4 mb-3">
                          <label for="validationCustom02">Teléfono</label>
                          <input
                            type="text"
                            class="form-control"
                            id="validationCustom02"
                            placeholder="Número de teléfono y/o contacto"
                            name="phone"     
                            value="{{userfind.phone}}"                      
                          />                         
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-6 mb-3">
                          <div class="form-group">
                            <label for="exampleInputEmail1">Correo</label>
                            <input
                              type="email"
                              class="form-control"
                              id="exampleInputEmail1"
                              aria-describedby="emailHelp"
                              placeholder="El correo"
                              name="email"
                              value="{{userfind.email}}"
                              required
                            />
                            <small id="emailHelp" class="form-text text-muted"
                              >No entregues a nadie tu dirección de correo.</small
                            >
                          </div>
                        </div>                               
                      </div>
                      <input type="hidden" name="_csrf" value="{{csrfToken}}">
                      <button class="btn btn-success" type="submit">
                        Guardar cambios
                      </button>
                    </form>   
                    <script>
                      !(function () {
                        "use strict";
                        window.addEventListener(
                          "load",
                          function () {
                            var e = document.getElementById("needs-validation");
                            e.addEventListener(
                              "submit",
                              function (t) {
                                !1 === e.checkValidity() &&
                                  (t.preventDefault(), t.stopPropagation()),
                                  e.classList.add("was-validated");
                              },
                              !1
                            );
                          },
                          !1
                        );
                      })();
                    </script>                 
                  </div>
                </div>
              </div>
            </div>
          </div>
        </main>
        
        {{> footerAdm}}
      </div>
    </div>
