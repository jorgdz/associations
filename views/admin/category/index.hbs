    <div id="loader"><div class="spinner"></div></div>
    <script>
      window.addEventListener("load", function load() {
        const loader = document.getElementById("loader");
        setTimeout(function () {
          loader.classList.add("fadeOut");
        }, 300);
      });
    </script>

    <div>
      
      {{> sidebar}}

      <div class="page-container">
        {{> navbar}}

        <main class="main-content bgc-grey-100">
          <div id="mainContent">
            <div class="container-fluid">
              <h4 class="c-grey-900 mT-10 mB-30">Añadir categoría</h4>           
              <div class="row">
                <div class="col-md-12">
                  <div class="bgc-white bd bdrs-3 p-20 mB-20">
                    <div style="text-align: center;">
                      {{#if success}}
                        <div class="alert alert-success" role="alert">
                          {{success}}
                        </div>
                      {{/if}}
                    </div>
                    <a href="/category-create" class="btn cur-p btn-primary">Nuevo</a>
                    <p>
                      <form action="/categories?size={{size}}&page={{categories.currentPage}}&search={{search}}" method="GET">
                        <div class="row">	
                          <div class="col col-sm-5">
                            <input type="hidden" name="size" value="{{size}}" />
                            <input type="hidden" name="page" value="{{categories.currentPage}}" />
                            <input type="text" name="search" value="{{search}}" placeholder="Buscar..." class="form-control" />
                          </div>		
                          <div class="col col-sm-3">
                            <input type="submit" value="Buscar" class="btn btn-secondary" />	
                          </div>			
                        </div>
                      </form>
                    </p>
                    <table class="table table-hover table-bordered">
                      <thead class="thead-dark">
                        <tr>
                          <th scope="col">#</th>
                          <th scope="col">Nombre de la categoría</th>                    
                          <th scope="col">Editar</th>
                          <th scope="col">Borrar</th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each categories.data}}
                          <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{name}}</td>                                    
                            <td>
                              <a href="/categories/{{id}}" class="btn cur-p btn-info">
                                <i class="c-light-white-500 ti-pencil"></i>
                              </a>
                            </td>
                            <td>
                              <a class="btn cur-p btn-danger" href="/categories/destroy/{{id}}"><i class="c-light-white-500 ti-trash"></i></a>
                            </td>
                          </tr>
                        {{/each}}
                      </tbody>
                    </table>
                    <div style="width:100%;text-align: center;">
                      <div
                        class="btn-group mr-2"
                        role="group"
                        aria-label="First group"
                      >
                        <a href="?size={{size}}&page={{categories.prev}}&search={{search}}" class="btn btn-primary"><span class="arrow"><i class="ti-angle-left"></i></span></a>
                        {{#each categories.numbersPage as | number |}}
                          <a href="?size={{../size}}&page={{lessThan number}}&search={{../search}}" class="btn btn-primary">{{number}}</a>
                        {{/each}}
                        <a href="?size={{size}}&page={{categories.next}}&search={{search}}" class="btn btn-primary"><span class="arrow"><i class="ti-angle-right"></i></span></a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>            
            </div>
          </div>
        </main>
        
        {{> footerAdm}}
      </div>
    </div>
